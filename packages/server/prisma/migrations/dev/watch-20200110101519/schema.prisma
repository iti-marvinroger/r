generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model FlightRule {
  id    String  @default(cuid()) @id
  flightId String
  origin String
  destination String

  businessInitialPrice Int
  businessSeats Int
  businessNextPriceRatio Int
  ecoInitialPrice Int
  ecoSeats Int
  ecoNextPriceRatio Int
}

model Flight {
  id    String  @default(cuid()) @id
  date DateTime

  rule FlightRule

  seats Seat[]
}

enum Class {
  ECO
  BUSINESS
}

model Seat {
  id    String  @default(cuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  flight Flight
  class Class

  name String
}