generator photon {
  provider = "photonjs"
}

datasource db {
  provider = "sqlite"
  url = "***"
}

model Flight {
  id    String  @default(cuid()) @id
  origin String
  destination String

  businessInitialPrice Int
  businessSeats Int
  ecoInitialPrice Int
  ecoSeats Int
}

enum Class {
  ECO
  BUSINESS
}

model Seat {
  id    String  @default(cuid()) @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  flight Flight
  class Class

  name String
}